<div class="container internal">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User Profile</h3>
      </div>
      <div class="panel-body">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-12 col-offset-0" id="formDiv">
          <% include ../template/flash.ejs %>
          <form id="profileForm" method="post" action="../api/users">
           <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" value=<%= user.firstName %> name="firstName">
          </div>
          <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" value=<%= user.lastName %> name="lastName">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" value=<%= user.email %> name="email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <p>Click <a id="passwordReset" style="cursor:pointer">here</a> to reset password. You will recieve an email with a link to proceed.</p>
          </div>
          <div class="form-group">
            <label>Delete Account</label>
            <p>To delete you account, please <a href="mailto:someone@example.com" target="_top" style="cursor:pointer">contact support.</a></p>
          </div>
          <button type="save" class="btn btn-default pull-right">Save</button>
        </form>
      </div>
    </div>
  </div>
</div><!-- /.row -->
</div><!-- /.container -->